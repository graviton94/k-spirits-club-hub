rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'ADMIN';
    }

    // Users Collection
    // User can read/write their OWN document.
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Spirits Collection
    // Public Read, Strict Admin Write
    match /artifacts/{appId}/public/data/spirits/{spiritId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Fallback for direct root access if migration didn't happen (legacy path)
    match /spirits/{spiritId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // User Cabinet Collection
    // Private user data - each user can only access their own cabinet
    match /artifacts/{appId}/users/{userId}/cabinet/{spiritId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Reviews Collection
    // Public Read, Authenticated Write (Users can create/edit own reviews)
    // Note: The logic enforces one review per spirit per user via ID format {spiritId}_{userId}
    match /artifacts/{appId}/public/data/reviews/{reviewId} {
      allow read: if true;
      allow write: if request.auth != null; 
    }

    // News Collection
    // Public Read, Strict Admin Write
    match /artifacts/{appId}/public/data/news/{newsId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    // World Cup Results Collection
    // Public Create/Read (for sharing results)
    match /worldcup_results/{resultId} {
      allow read, create: if true;
      allow update, delete: if false;
    }
  }
}
